<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.pented.learningapp.notification.model.GetNotificationListResponseModel.Data" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:onClick="@{(v)->click.onClick(v)}"
    android:id="@+id/mainLayout"
    android:layout_marginTop="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@{model.isRead == true ? @color/white: @color/topCandidateBg}"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="@dimen/_8sdp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:id="@+id/lilContant"
                android:layout_weight="1.7"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    style="@style/BoldText"
                    android:textSize="@dimen/_10ssp"
                    android:text="@{model.title}"
                    android:textColor="@color/heading_gray"
                    android:layout_height="wrap_content" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    style="@style/NormalText"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/heading_gray"
                    android:text="@{model.message}"
                    android:layout_height="wrap_content" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    style="@style/NormalText"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_8ssp"
                    app:getTimeAgo="@{model.notificationDate}"
                    android:textColor="@color/secondary_gray"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/imgView"
                android:layout_weight="0.3"
                android:layout_gravity="right|center"
                android:gravity="right|center"
                android:layout_toRightOf="@+id/lilContant"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    setNotificationIconBasedonType="@{model.type}"
                    android:layout_height="@dimen/_35sdp">

                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</layout>