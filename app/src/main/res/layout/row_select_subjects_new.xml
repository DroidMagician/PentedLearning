<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.pented.learningapp.homeScreen.home.model.GetSubscriptionDataResponseModel.Subjects" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/rlMainLayout"
        android:layout_width="match_parent"
        android:onClick="@{(v)->click.onClick(v)}"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center"
            android:layout_centerInParent="true">
            <CheckBox
                android:layout_gravity="left"
                android:id="@+id/ivChecked"
                android:onClick="@{(v)->click.onClick(v)}"
                android:layout_width="wrap_content"
                android:enabled="@{model.isSubscribed ? false : true}"
                android:layout_alignParentRight="true"
                android:checked="@{model.selected}"
                android:layout_height="wrap_content">

            </CheckBox>
            <ImageView
                android:id="@+id/ivSubjectIcon"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:itemMyImageURLWithoutPlaceholder="@{model.s3Bucket}" />

            <TextView
                android:id="@+id/tvSubjectName"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@{model.subjectName}"
                android:textColor="@color/darkest_gray"
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/tvSubjectPrice"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@{`(`+model.SubscriptionFee+` Rs)`}"
                android:textColor="@color/darkest_gray"
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/ivLockThumb"-->
<!--            android:layout_gravity="right"-->
<!--            -->
<!--            android:layout_width="@dimen/_20sdp"-->
<!--            android:layout_height="@dimen/_20sdp"-->
<!--            android:visibility="@{model.isSubscribed ? View.VISIBLE : View.GONE}"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:src="@drawable/check"/>-->
    </RelativeLayout>

</RelativeLayout>
</layout>
