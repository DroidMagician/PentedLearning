<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.pented.learningapp.homeScreen.leaderboard.viewModel.LeaderboardVM" />
    </data>
    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                app:cardCornerRadius="@dimen/_25sdp"
                app:cardElevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_minus15sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center|top"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_back_noti"
                            android:padding="@dimen/_3sdp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/leaderboards"
                            android:textColor="@color/heading_gray"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"/>
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_width="@dimen/_90sdp"
                            app:lottie_rawRes="@raw/shine"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:layout_height="@dimen/_25sdp"
                            />
                        <RelativeLayout
                            android:layout_width="@dimen/_120sdp"
                            android:visibility="visible"
                            android:id="@+id/lilRank"
                            android:background="@drawable/orange_chip_bg"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_height="@dimen/_20sdp">

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:id="@+id/txtYourRank"
                                style="@style/NormalText700"
                                android:text="Your Rank :"
                                android:layout_height="match_parent">

                            </TextView>
                        </RelativeLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="@dimen/_17sdp"
                        android:layout_height="@dimen/_17sdp"
                        android:src="@drawable/ic_filter_list"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>



            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.core.widget.NestedScrollView
                    android:layout_above="@+id/progressBarData"
                    android:layout_width="match_parent"
                    android:id="@+id/scrollLeaderboard"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:id="@+id/activity_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="Top 3 candidates of this month"
                            android:id="@+id/topThreeText"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            style="@style/NormalText600"
                            android:layout_height="wrap_content">

                        </TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_top"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            tools:itemCount="3"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            tools:listitem="@layout/row_top_candidates"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:animationCache="true" />
                        <TextView
                            android:id="@+id/txtOtherStudent"
                            android:layout_width="match_parent"
                            android:text="candidates in your competition for this month"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            style="@style/NormalText600"
                            android:layout_height="wrap_content">

                        </TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_bottom"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            tools:itemCount="10"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                            tools:listitem="@layout/row_bottom_candidates"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:animationCache="true" />

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>
                <ProgressBar
                    android:id="@+id/progressBarData"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

        <include
            android:visibility="gone"
            layout="@layout/transparent_progressbar_layout" />
    </FrameLayout>

</layout>