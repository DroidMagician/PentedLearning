<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/_10ssp"
    android:layout_marginRight="@dimen/_10ssp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/_15sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/notifications_bell"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        style="@style/NormalText600"
                        android:layout_marginLeft="@dimen/_12ssp"
                        android:textSize="@dimen/_12ssp"
                        android:text="Subscribe"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    style="@style/BoldText"
                    android:id="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_22sdp"
                    android:text="Your trial is about to expire in 24 days"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    style="@style/MediumText"
                    android:id="@+id/txtDescription"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:text="Check out our packages customised to your needs subject wise or share app with your friends and get free extensions."
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/lilRemindMeLater"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            style="@style/NormalText600"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_14ssp"
                            android:text="Remind me later"
                            android:textColor="@color/primary"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:id="@+id/llSubscribe"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_105sdp"
                            android:src="@drawable/btnsubscribe"
                            android:layout_height="@dimen/_40sdp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>