<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="viewModel"
            type="com.pented.learningapp.authScreens.viewModel.RegisterVM" />
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".authScreens.RegisterYourselfActivity">



    <LinearLayout
        android:id="@+id/llBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:src="@drawable/ic_back"
            app:tint="@color/heading_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/back"
            android:textColor="@color/heading_gray"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_register_yorself_bg"
        android:orientation="vertical" />


<!--    <FrameLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginTop="@dimen/_50sdp"-->
<!--        android:layout_above="@+id/llIndicator"-->
<!--        android:layout_marginBottom="@dimen/_30sdp"/>-->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_above="@+id/dots_indicator"
        android:layout_marginBottom="@dimen/_20sdp"/>



<!--    <com.afollestad.viewpagerdots.DotsIndicator-->
<!--        android:id="@+id/dots"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="48dp"-->
<!--        app:dot_height="@dimen/_7sdp"-->
<!--        app:dot_width="@dimen/_7sdp"-->
<!--        app:dot_margin="@dimen/_5sdp"-->
<!--        app:dot_tint="@color/primary"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="@dimen/_20sdp"-->
<!--        />-->


    <com.pented.learningapp.myUtils.DotsIndicator
        android:id="@+id/dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:dotsColor="@color/dot_color"
        app:selectedDotColor="@color/primary"
        app:dotsCornerRadius="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20sdp"
        app:dotsSize="@dimen/_10sdp"
        app:dotsSpacing="@dimen/_5sdp"
        />

    <LinearLayout
        android:id="@+id/llIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:visibility="gone"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivDot1"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/ic_active_dot"/>

        <ImageView
            android:id="@+id/ivDot2"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_inactive_dot"/>

    </LinearLayout>

</RelativeLayout>
        <include
            android:id="@+id/progressRegister"
            android:visibility="gone"
            layout="@layout/transparent_progressbar_layout" />
    </FrameLayout>
</layout>