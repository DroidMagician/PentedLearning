<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainSubjectLayout"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="horizontal">

   <LinearLayout
       android:id="@+id/mainLayout"
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_centerVertical="true"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="@dimen/_22sdp"
           android:id="@+id/icSubjectIcon"
           android:src="@drawable/ic_calculater"
           android:layout_height="@dimen/_22sdp">
       </ImageView>
       <TextView
           android:id="@+id/sectionHeader"
           style="@style/NormalText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Maths"
           android:padding="10dp"
           android:textSize="@dimen/_14ssp"
           android:textStyle="bold"/>
   </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        style="@style/NormalText"
        android:id="@+id/txtPart"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/secondary_gray"
        android:text="Part - 1 (Board preparation)"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/mainLayout"
        android:id="@+id/totalQuestions"
        style="@style/NormalText"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maths"
        android:textSize="@dimen/_12ssp" />
</RelativeLayout>