<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.pented.learningapp.homeScreen.home.weekendTestSeries.model.WeekendTestSeriesResponseModel.Data" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"
    android:onClick="@{(v)->click.onClick(v)}"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:src="@drawable/ic_calculater"
                android:layout_height="@dimen/_22sdp">
            </ImageView>
            <TextView
                android:id="@+id/sectionHeader"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{model.subjectName}"
                android:padding="10dp"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            style="@style/NormalText"
            android:id="@+id/txtPoints"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/secondary_gray"
            android:text="@{model.totalQuestion+` questions,` +model.Duration+` Mins`}"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/gray_rounded_"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtName"
                            style="@style/NormalText"
                            android:textSize="@dimen/_12ssp"
                            android:layout_width="wrap_content"
                            android:text="@{model.title}"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/NormalText"
                            android:id="@+id/txtPart"
                            android:textSize="@dimen/_8ssp"
                            android:layout_width="wrap_content"
                            android:text="@{model.TotalMark + ` Marks`}"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:src="@drawable/ic_time"
                        android:layout_height="@dimen/_10sdp">
                    </ImageView>
                    <TextView
                        style="@style/NormalText"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/secondary_gray"
                        android:layout_width="wrap_content"
                        android:text="@{model.time}"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_width="@dimen/_10sdp"
                        android:src="@drawable/ic_calendar"
                        android:layout_height="@dimen/_12sdp">
                    </ImageView>
                    <TextView
                        style="@style/NormalText"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_8ssp"
                        android:textColor="@color/secondary_gray"
                        android:layout_width="wrap_content"
                        app:setWeekendTestDate="@{model.date}"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <TextView
                    style="@style/NormalText"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_8ssp"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:visibility="@{model.description == null ? View.GONE : View.VISIBLE}"
                    android:text="@{model.description}"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
</layout>