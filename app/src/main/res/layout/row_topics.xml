<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_15sdp"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_100sdp">
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTopicImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_topic_img"/>

        <TextView
            android:id="@+id/tvTopicName"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            tools:text="properties of rational numbers"
            android:textColor="@color/heading_gray"
            android:fontFamily="@font/nunito_regular"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>
        <ImageView
            android:id="@+id/ivLockThumb"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_thumb_new"/>

    </FrameLayout>


</RelativeLayout>