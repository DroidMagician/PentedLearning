<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.pented.learningapp.homeScreen.home.liveClasses.model.GetLiveClassResponseModel.Data" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        android:background="@android:drawable/list_selector_background">

        <LinearLayout
            android:layout_toLeftOf="@+id/getRecording"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtSubjectName"
                    style="@style/NormalText600"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@{model.subjectName}"
                    android:gravity="left"
                    android:textSize="@dimen/_14ssp" />
                <ImageView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_expired"
                    android:layout_height="wrap_content">
                </ImageView>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/txtDuration"
                style="@style/NormalText600"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_3sdp"
                android:text="@{model.difference}"
                android:paddingBottom="10dp"
                android:textColor="@color/secondary_gray"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/getRecording"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="@{model.currentlyRunning ? `Join Now`: `Get recording` }"
            android:onClick="@{(v)->click.onClick(v)}"
            style="@style/NormalText600"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/primary"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lilMain"
        android:onClick="@{(v)->click.onClick(v)}"
        android:background="@drawable/gray_rounded_"
        android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.7"
               android:paddingTop="@dimen/_10sdp"
               android:paddingLeft="@dimen/_10sdp"
               android:gravity="right"
               android:layout_gravity="right"
               android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/dummy_teacher"
                    android:scaleType="fitXY"
                    app:itemMyImageURL="@{model.s3Bucket}"
                    android:layout_height="@dimen/_120sdp">

                </ImageView>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1.3"
               android:orientation="vertical"
               android:padding="@dimen/_10sdp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txtSubject"
                   style="@style/NormalText"
                   android:textSize="@dimen/_8ssp"
                   android:textFontWeight="700"
                   android:textColor="@color/primary"
                   android:layout_width="wrap_content"
                   android:text="@{model.subjectName}"
                   android:layout_height="wrap_content">
               </TextView>
               <TextView
                   android:id="@+id/txtName"
                   android:layout_marginTop="@dimen/_10sdp"
                   style="@style/NormalText"
                   android:textSize="@dimen/_12ssp"
                   android:textFontWeight="400"
                   android:layout_width="wrap_content"
                   android:text="@{model.topicTitle}"
                   android:layout_height="wrap_content">
               </TextView>
               <TextView
                   android:id="@+id/txtTeacherName"
                   style="@style/NormalText"
                   android:textSize="@dimen/_8sdp"
                   android:textFontWeight="600"
                   android:layout_width="wrap_content"
                   android:text="@{`by`+ ` `+model.teacherName}"
                   android:layout_height="wrap_content">
               </TextView>
               <LinearLayout
                   android:layout_marginTop="@dimen/_5sdp"
                   android:layout_width="match_parent"
                   android:layout_gravity="center|left"
                   android:gravity="center|left"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="@dimen/_10sdp"
                       android:src="@drawable/ic_time"
                       android:layout_height="@dimen/_10sdp">
                   </ImageView>
                   <TextView
                       style="@style/NormalText"
                       android:layout_marginLeft="@dimen/_5sdp"
                       android:textSize="@dimen/_8ssp"
                       android:textColor="@color/secondary_gray"
                       android:layout_width="wrap_content"
                       android:text="@{model.time}"
                       android:layout_height="wrap_content">
                   </TextView>
                   <ImageView
                       android:layout_marginLeft="@dimen/_12sdp"
                       android:layout_width="@dimen/_10sdp"
                       android:src="@drawable/ic_calendar"
                       android:layout_height="@dimen/_12sdp">
                   </ImageView>
                   <TextView
                       style="@style/NormalText"
                       android:layout_marginLeft="@dimen/_5sdp"
                       android:textSize="@dimen/_8ssp"
                       android:textColor="@color/secondary_gray"
                       android:layout_width="wrap_content"
                       android:text="@{model.date}"
                       android:layout_height="wrap_content">
                   </TextView>
               </LinearLayout>
               <TextView
                   style="@style/NormalText"
                   android:textSize="@dimen/_6ssp"
                   android:layout_gravity="left"
                   android:gravity="left"
                   android:textFontWeight="700"
                   android:layout_marginTop="@dimen/_5sdp"
                   android:textColor="@color/secondary_gray"
                   android:layout_width="wrap_content"
                   android:text="@{model.description}"
                   android:layout_height="wrap_content">
               </TextView>
           </LinearLayout>
       </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>