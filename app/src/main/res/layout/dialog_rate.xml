<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/_10ssp"
    android:layout_marginRight="@dimen/_10ssp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/_15sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/rating"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/NormalText600"
                            android:layout_marginLeft="@dimen/_12ssp"
                            android:textSize="@dimen/_12ssp"
                            android:text="Rate us"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgCancel"
                        android:src="@drawable/cancel"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp">
                    </ImageView>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    style="@style/BoldText"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_20sdp"
                    android:text="Tell us how are we doing"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <com.willy.ratingbar.ScaleRatingBar
                        android:id="@+id/simpleRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_numStars="5"
                        app:srb_minimumStars="0"
                        app:srb_rating="0"
                        app:srb_starWidth="30dp"
                        app:srb_starHeight="30dp"
                        app:srb_starPadding="15dp"
                        app:srb_stepSize="1"
                        app:srb_isIndicator="false"
                        app:srb_clickable="true"
                        app:srb_scrollable="true"
                        app:srb_clearRatingEnabled="true"
                        app:srb_drawableEmpty="@drawable/star_empty"
                        app:srb_drawableFilled="@drawable/star_filled">
                    </com.willy.ratingbar.ScaleRatingBar>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>