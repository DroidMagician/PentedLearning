<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.pented.learningapp.homeScreen.home.model.GetSubscriptionDataResponseModel.Subjects" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_20sdp">

    <RelativeLayout
        android:id="@+id/rlMainLayout"
        android:layout_width="@dimen/_93sdp"
        android:onClick="@{(v)->click.onClick(v)}"
        android:layout_height="@dimen/_93sdp"
        android:background="@{model.selected ? @drawable/shadow_circle : @drawable/disable_bg}">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/ivSubjectIcon"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:itemMyImageURL="@{model.s3Bucket}" />

            <TextView
                android:id="@+id/tvSubjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{model.subjectName}"
                android:textColor="@color/darkest_gray"
                android:fontFamily="@font/nunito_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>
        <CheckBox
            android:layout_gravity="right"
            android:id="@+id/ivChecked"
            android:onClick="@{(v)->click.onClick(v)}"
            android:layout_width="wrap_content"
            android:visibility="@{model.isSubscribed ? View.GONE : View.VISIBLE}"
            android:layout_alignParentRight="true"
            android:checked="@{model.selected}"
            android:layout_height="wrap_content">

        </CheckBox>
<!--        <ImageView-->
<!--            android:id="@+id/ivLockThumb"-->
<!--            android:layout_gravity="right"-->
<!--            -->
<!--            android:layout_width="@dimen/_20sdp"-->
<!--            android:layout_height="@dimen/_20sdp"-->
<!--            android:visibility="@{model.isSubscribed ? View.VISIBLE : View.GONE}"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:src="@drawable/check"/>-->
    </RelativeLayout>

</RelativeLayout>
</layout>
