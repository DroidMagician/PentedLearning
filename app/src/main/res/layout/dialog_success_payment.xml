<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/_15sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/NormalText600"
                            android:textSize="@dimen/_22ssp"
                            android:text="Congratulations !!!"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        style="@style/BoldText"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:text="You have leveled up to the champ"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/NormalText"
                            android:layout_width="wrap_content"
                            android:text="You have successfully purchased our course."
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_16ssp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/MediumText"
                            android:id="@+id/txtPoints"
                            android:visibility="gone"
                            android:text="5 Points"
                            android:textSize="@dimen/_17ssp"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_level_icon"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Keep earning points to reach next level, Higher level players can earn cash prizes"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/secondary_gray"
                        android:textSize="@dimen/_10ssp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:id="@+id/lilRemindMeLater"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                style="@style/NormalText600"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_14ssp"
                                android:text="Remind me later"
                                android:textColor="@color/primary"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/llSubscribe"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/btnThanks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_15sdp"
                                android:paddingRight="@dimen/_15sdp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/button_bg"
                                android:fontFamily="@font/nunito_bold"
                                android:text="Thanks Pented"
                                style="?android:attr/borderlessButtonStyle"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:lottie_rawRes="@raw/celebration"
                    app:lottie_autoPlay="true"
                    android:visibility="visible"
                    app:lottie_loop="false"/>
            </FrameLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>