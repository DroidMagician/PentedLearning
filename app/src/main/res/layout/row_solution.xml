<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.pented.learningapp.homeScreen.practice.model.GetQuestionPaperBySubjectResponseModel.AnswerSPDF3Bucket" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lilMain"
        android:onClick="@{(v)->click.onClick(v)}"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtName"
                    style="@style/NormalText"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="wrap_content"
                    android:text="@{model.fileName}"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/NormalText"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:visibility="gone"
            android:text="learn today about rationals &amp; numbers practical exposure by our expert !! Lorem ipsum, or lipsum as it is sometimes known. learn today about rationals &amp; numbers practical exposure by our expert !! Lorem ipsum, or lipsum as it is sometimes known."
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_110sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_download_pdf"
            android:layout_height="@dimen/_20sdp"></ImageView>


    </LinearLayout>

</LinearLayout>
</layout>